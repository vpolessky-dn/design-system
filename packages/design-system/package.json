{
	"name": "@drivenets/design-system",
	"version": "0.2.0",
	"license": "Apache-2.0",
	"type": "module",
	"types": "./dist/index.d.cts",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./index.min.css": "./dist/index.min.css",
		"./raw-styles/*": "./src/styles/*"
	},
	"files": [
		"README.md",
		"CHANGELOG.md",
		"LICENSE",
		"./dist",
		"./src",
		"!**/__tests__",
		"!./src/**/*.d.ts",
		"!**/stories",
		"!**/*.stories.*"
	],
	"repository": {
		"url": "https://github.com/drivenets/design-system",
		"directory": "/packages/design-system"
	},
	"scripts": {
		"lint": "pnpm generate-scss-dts; eslint --max-warnings=0 .",
		"typecheck": "pnpm generate-scss-dts; tsc",
		"generate-scss-dts": "typed-scss-modules ./src -o ./.scss-dts --nameFormat all --exportType default > /dev/null 2>&1",
		"storybook": "storybook dev -p 6006",
		"test": "vitest",
		"build": "tsdown",
		"build:storybook": "storybook build",
		"build:lint": "publint && attw --pack"
	},
