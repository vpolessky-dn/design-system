{
	"name": "@drivenets/eslint-plugin-design-system",
	"version": "0.0.2",
	"license": "Apache-2.0",
	"type": "module",
	"types": "./dist/index.d.cts",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"files": [
		"README.md",
		"CHANGELOG.md",
		"LICENSE",
		"./dist",
		"./src",
		"!**/__tests__"
	],
	"scripts": {
		"lint": "eslint --max-warnings=0 .",
		"typecheck": "tsc",
		"test": "vitest",
		"build": "tsdown",
		"build:lint": "publint && attw --pack"
	},
	"dependencies": {
		"@eslint/core": "^1.0.0",
		"eslint-no-restricted": "^0.0.9"
	},
	"devDependencies": {
		"@arethetypeswrong/cli": "^0.18.2",
		"eslint": "^9.39.2",
		"publint": "^0.3.16",
		"tsdown": "^0.18.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"peerDependencies": {
		"@typescript-eslint/parser": "^8.50.0",
		"eslint": "^9.0.0",
		"typescript": "^5.0.0"
	}
}
