{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"lint": {
			"dependsOn": [],
			"inputs": ["$TURBO_DEFAULT$", "$TURBO_ROOT$/eslint.config.base.ts"]
		},
		"//#lint:root": {
			"inputs": ["$TURBO_DEFAULT$", "!$TURBO_ROOT$/packages/**"]
		},
		"typecheck": {
			"dependsOn": [],
			"inputs": ["$TURBO_DEFAULT$", "$TURBO_ROOT$/tsconfig.base.json"]
		},
		"//#typecheck:root": {
			"inputs": ["$TURBO_DEFAULT$", "!$TURBO_ROOT$/packages/**"]
		},
		"test": {
			"dependsOn": []
		},
		"build": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"build:lint": {
			"dependsOn": ["build"]
		}
	}
}
